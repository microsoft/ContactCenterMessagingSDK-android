<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke android:width="2dp"
                android:color="@color/lcw_messagingFooterTopBorderColor" />
            <solid android:color="@color/lcw_messagingFooterBackground" />

        </shape>
    </item>
    <!-- This is for border bottom but
    you can change this according to your need -->
    <item android:bottom="2dp" >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/lcw_messagingFooterBackground" />
        </shape>
    </item>

</layer-list>